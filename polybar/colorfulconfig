[module/bspwm]
type                      = internal/bspwm
label-focused             = 
label-focused-padding     = 2
label-focused-foreground  = #b877db
label-occupied            = 
label-occupied-padding    = 2
label-occupied-foreground = #21bfc2
label-urgent              = 
label-urgent-padding      = 2
label-urgent-foreground   = #f43e5c
label-empty               = 
label-empty-padding       = 2
label-empty-foreground    = #6c6f93
pin-workspaces = true

[module/pulseaudio]
type = internal/pulseaudio

format-volume =<label-volume>
label-muted =  
label-volume = %percentage%%
label-volume-background = #21bfc2
label-muted-background = #21bfc2
label-muted-padding = 1
label-volume-padding = 1

[module/cpu]
type = internal/cpu
interval = 0.5
format =<label>
label = %percentage%%
label-background = #09f7a0
label-padding = 1

[module/memory]
type = internal/memory
interval = 3
format =<label>
label = %gb_used%
label-background = #b877db
label-padding = 1

[module/date]
type = internal/date
label = %date% %time%
interval = 1.0
date = %Y-%m-%d
time = %H:%M
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S
format =<label>
label-background = #27d796
label-padding = 1

[module/wired-network]
type = internal/network
interface = eno1
label-connected =  %local_ip%
label-disconnected =  %local_ip%
label-connected-background = #e95678
label-connected-padding = 1
label-disconnected-background = #e95678
label-disconnected-padding = 1
label-disconnected-underline = #f00

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
base-temperature = 20
warn-temperature = 70
format =<label>
label = %temperature-c%
label-background = #25b0bc
label-warn-background = #25b0bc
label-padding = 1
label-warn-padding = 1
label-warn = %temperature-c%
label-warn-foreground = #f00

[module/updates-pacman-aurhelper]
type = custom/script
exec = $HOME/.config/polybar/modules/calendar.sh
interval = 6000
format = <label>
label-background = #27d796
label-padding = 1

; vim: set ft=dosini nomodeline:

[module/kdeconnect]  
type = custom/script  
exec = "$HOME/.config/polybar/modules/polybar-kdeconnect/polybar-kdeconnect.sh -d"  
tail = true
format = <label>
label-background = #25b0bc
label-padding = 1
